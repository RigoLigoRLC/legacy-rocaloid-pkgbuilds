
pkgname=rocaloid-cvesvp
pkgver=0.0.9bdca14
pkgrel=1
epoch=
pkgdesc="Cyber Voice Engine Spectral Voice Processing part of Rocaloid Project"
arch=('x86_64')
url="https://github.com/Rocaloid/CVESVP"
license=('LGPL3')
groups=()
depends=()
makedepends=('cmake' 'rocaloid-rutil2' 'rocaloid-rfnl' 'rocaloid-cvedsp2')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git+${url}.git")
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
  cd "${srcdir}/CVESVP"
  echo "0.0."`git describe --always`
}

build() {
    cd "$srcdir/CVESVP"
    sed -i 's/add_subdirectory(external\/RUtil2)//g' CMakeLists.txt
    sed -i 's/add_subdirectory(external\/RFNL)//g' CMakeLists.txt
    sed -i 's/add_subdirectory(external\/CVEDSP2)//g' CMakeLists.txt
    mkdir -p build
    cd build
    cmake ../ -DCMAKE_BUILD_TYPE=RELEASE -DCMAKE_INSTALL_PREFIX=/usr
    make -j6
}

package() {
	cd "$srcdir/CVESVP/build"
	install -D libCVESVP.a "${pkgdir}/usr/lib/libCVESVP.a"
	# Dirty hack, I don't wanna do this but EHH
	cp -R include "${pkgdir}/usr/"
}
